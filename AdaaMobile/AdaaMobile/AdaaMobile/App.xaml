<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AdaaMobile.App">
  <Application.Resources>
    <ResourceDictionary>
      <Style x:Key="labelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="Green" />
        <Setter Property="BackgroundColor" Value="Transparent" />
      </Style>


      <Style x:Key="ButtonDefaultStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="#FF007C84" />
        <Setter Property="BorderRadius" Value="5" />
      </Style>

      <!--Update Value-->
      <Color x:Key="AppBackgroundDark" >#FF006A70</Color>
      <Color x:Key="AppBackgroundLight" >#FF007c85</Color>
      <Color x:Key="YellowAccent" >#FFe9bf04</Color>
      <Color  x:Key="PurpleAccent"> #FF007c85 </Color>

      <x:Int32 x:Key="BorderRadius">5</x:Int32>
      <x:Double x:Key="CornerRadius">5</x:Double>
    </ResourceDictionary>
  </Application.Resources>
</Application>