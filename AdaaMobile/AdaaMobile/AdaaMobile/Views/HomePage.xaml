<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:AdaaMobile.Controls;assembly=AdaaMobile"
             x:Class="AdaaMobile.Views.HomePage">
       <Grid>
        <ScrollView HorizontalOptions="FillAndExpand"
                    VerticalOptions="Fill"
                    Orientation="Vertical">
          <!--TODO:Change hardwired sizes after fixing center issue which enters loop in GetRequestSize
              handle orientation to increase number of items to 3
          -->
            <controls:ColumnsPanel ColumnCount="2"
                             ItemSource="{Binding Pages}"
                             HorizontalOptions="Center" 
                             ColumnWidth="150"
                             ColumnHeight="150"
                             HorizontalSpacing="30"
                             VerticalSpacing="40"
                             >
                <controls:ColumnsPanel.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Spacing="10" 
                                 VerticalOptions="Fill" 
                                 HorizontalOptions="Fill">
                            <Grid VerticalOptions="FillAndExpand" 
                                 HorizontalOptions="FillAndExpand"
                                 BackgroundColor="{StaticResource AppBackgroundLight}"
                                 >
                                <Image Source="{Binding IconSource}" 
                                   VerticalOptions="Center" 
                                   HorizontalOptions="Center"
                                   HeightRequest="70"
                                   WidthRequest="70"
                                   />
                            </Grid>
                            <Label Text="{Binding Title}" HorizontalOptions="Center"/>
                        </StackLayout>
                    </DataTemplate>
                </controls:ColumnsPanel.ItemTemplate>

            </controls:ColumnsPanel>
        </ScrollView>
         </Grid>
</ContentPage>