<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdaaMobile.Views.ProfilePropertyControl"
             BackgroundColor="Transparent"
             x:Name="ParentView"
             >

  <StackLayout>
    <Label TextColor="#FF1B8991" FontSize="Medium" Text="{Binding Title,Source={x:Reference ParentView}}" HorizontalTextAlignment="Start"/>
    <Label TextColor="Black" FontSize="Medium" FontAttributes="Bold" Text="{Binding Value,Source={x:Reference ParentView}}" HorizontalTextAlignment="Start"/>

  </StackLayout>
</ContentView>